{
  "manifest_version": 3,
  "name": "SOAL-AI Asisten Jawab Soal",
  "version": "2.3.2",
  "description": "Asisten AI untuk membantu kamu menjawab soal",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus",
    "notifications",
    "desktopCapture",
    "identity"
  ],

  "commands": {
    "open-context-menu": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Buka Context Menu SOAL-AI"
    },
    "activate-scan-area": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "Aktifkan Scan Area Tool"
    }
  },
  
  "host_permissions": [
    "https://litellm.bisakerja.id/*",
    "https://ekqkwtxpjqqwjovekdqp.supabase.co/*",
    "https://soal-ai.web.id/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-area-selector.js"],
      "css": ["scan-area-styles.css", "floating-windows.css"],
      "run_at": "document_end"
    }
  ],


  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SOAL-AI Asisten Jawab Soal",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  

  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
